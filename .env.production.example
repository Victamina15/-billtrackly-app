# BillTracky Production Environment Configuration
# Copy this file to .env and fill in your actual values

# Environment
NODE_ENV=production

# Server Configuration
PORT=3000
APP_URL=https://billtracky.com

# Database Configuration (Required)
# Replace with your actual PostgreSQL connection string
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Email Service Configuration (Required)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# Email domain must be verified in Resend dashboard
FROM_EMAIL=noreply@billtracky.com

# Security Configuration (Generate secure random strings)
SESSION_SECRET=generate_a_secure_random_string_here
JWT_SECRET=generate_another_secure_random_string_here

# Optional: Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here_optional

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads